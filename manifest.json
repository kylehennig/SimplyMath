{
  "name": "SimplyMath",
  "description": "Assists with typing equations as you browse the web.",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "src/background-scripts/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "128": "icons/icon_128.png"
    },
    "default_title": "SimplyMath",
    "default_popup": "src/browser-action/simplymath.html"
  },
  "commands": {
    "create-equation": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Create an equation"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/content-scripts/simplymath-editor.js",
        "src/content-scripts/simplymath.js"
      ],
      "css": [
        "src/content-scripts/simplymath-editor.css"
      ]
    }
  ],
  "options_page": "src/options-page/options.html",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ]
}
