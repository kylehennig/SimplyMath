{
  "name": "SimplyMath",
  "description": "Assists with typing equations as you browse the web.",
  "version": "0.0.0.1",
  "manifest_version": 2,
    "background": {
    "scripts": ["src/background-scripts/background.js"],
    "persistent": false
  },
  "icons": {
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "128": "icons/icon_128.png"
    },
    "default_title": "SimplyMath",
    "default_popup": "src/browser-action/simplymath.html"
  },
  "commands": {
    "create-equation": {
      "suggested_key": { "default": "Ctrl+Shift+Y" },
      "description": "Creates an equation"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "src/content-scripts/simplymath.js"
      ],
      "css": [
        "src/content-scripts/simplymath.css"
      ]
    }
  ],
  "options_page": "src/options-page/simplymath.html",
  "permissions": [
    "storage",
    "contextMenus",
    "https://*/*"
  ]
}
